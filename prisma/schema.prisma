
// 1. Database Connection Definition (SQLite)
datasource db {
  provider = "sqlite"
}

// 2. Prisma Client Generator
generator client {
  provider = "prisma-client-js"
  engineType = "binary" 
}

// 3. THE QnA DATA MODEL
model Qna {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  question_kn String
  answer_kn   String
  keywords_kn String
  
  question_en String?
  answer_en   String?
  keywords_en String?

  @@index([question_en])
  @@index([keywords_en])
}